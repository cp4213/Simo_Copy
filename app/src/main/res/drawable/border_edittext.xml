<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="@dimen/margin_edittext_top_style">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="@color/gray_lines" />
            <solid
                android:color="#00FFFFFF"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <corners
                android:bottomLeftRadius="@dimen/round_corner_edittext"
                android:bottomRightRadius="@dimen/round_corner_edittext"
                android:topLeftRadius="@dimen/round_corner_edittext"
                android:topRightRadius="@dimen/round_corner_edittext" />
        </shape>
    </item>
</layer-list>