<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/CardViewBase"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowConvocatory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableIcon="@drawable/ic_date_range_24dp"
                android:textColor="#000000"
                app:textLabel="@string/convocatory_"
                app:textLabelSize="14sp" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowEntity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableIcon="@drawable/ic_account_entity_24dp"
                android:textColor="#000000"
                app:textLabel="@string/entity_"
                app:textLabelSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardViewBase"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowStages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableIcon="@drawable/ic_format_list_numbered_24dp"
                android:textColor="#000000"
                app:textLabel="@string/stages_two"
                app:textLabelSize="14sp" />

            <LinearLayout
                android:id="@+id/linearStages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <co.gov.cnsc.mobile.simo.views.RowStageConvocatoryView
                    android:id="@+id/rowStageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardViewBase"
        app:cardBackgroundColor="#FFFFFF">

        <co.gov.cnsc.mobile.simo.views.RowLabelValue
            android:id="@+id/rowNormativity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableIcon="@drawable/ic_legal_hammer_24dp"
            android:textColor="#000000"
            app:textLabel="@string/normativity_two"
            app:textLabelSize="14sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>