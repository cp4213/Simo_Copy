<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/CardViewBase"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:drawableIcon="@drawable/ic_twotone_work_24px"
                app:layout_constraintEnd_toStartOf="@+id/imageIconDecorative"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#000000"
                app:textLabel="@string/charge_"
                app:textLabelSize="14sp" />

            <ImageButton
                android:id="@+id/imageIconDecorative"
                android:layout_width="@dimen/size_icon_item_top_right"
                android:layout_height="@dimen/size_icon_item_top_right"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/employment_status"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_favorite_border_24dp" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowConvocatory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowCharge"
                android:textColor="#000000"
                app:textLabel="@string/convocatory_" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowOPEC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowConvocatory"
                android:textColor="#000000"
                app:textLabel="@string/number_opec" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowVancancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowOPEC"
                android:textColor="#000000"
                app:textLabel="@string/vacancy" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowVancancy"
                android:textColor="#000000"
                app:textLabel="@string/asignation_salarial" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowCloseInscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSalary"
                android:textColor="#000000"
                app:textLabel="@string/close_of_inscriptions" />

            <co.gov.cnsc.mobile.simo.views.RowLabelValue
                android:id="@+id/rowAttachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableIcon="@drawable/ic_attach_file_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowCloseInscription"
                android:textColor="#000000"
                app:textLabel="@string/see_functions_attachment" />

            <ImageView
                android:id="@+id/imageProcessJob"
                android:layout_width="@dimen/size_icon_alert"
                android:layout_height="@dimen/size_icon_alert"
                android:contentDescription="@string/employment_status"
                android:src="@drawable/baseline_launch_black_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowAttachment" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageProcessJob" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>