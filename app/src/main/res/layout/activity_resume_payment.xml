<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResumePaymentActivity">

    <include layout="@layout/layout_app_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.105">

                <TextView
                    android:id="@+id/resume_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/participation_payment_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="46dp" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/ok_checked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/successfully_validated_employment"
                        android:drawableBottom="@drawable/ic_twotone_done_outline_24px"
                        android:gravity="center"
                        android:text="@string/successfully_validated_employment"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/resume_empleo_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/employ_"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="250dp" />

                    <TextView
                        android:id="@+id/resume_opec_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/number_job_opec"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="250dp" />

                    <TextView
                        android:id="@+id/resume_convocatoria_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/convocatory"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="250dp" />

                    <TextView
                        android:id="@+id/resume_nivel_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/level"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="250dp" />

                    <TextView
                        android:id="@+id/resume_salary_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/asignation_salarial"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="250dp" />

                    <TextView
                        android:id="@+id/resume_nombres_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/names"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="213dp" />

                    <TextView
                        android:id="@+id/resume_apellidos_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/surnames"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="167dp" />

                    <TextView
                        android:id="@+id/resume_dni_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="#000000"
                        android:text="@string/c_dula"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="250dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                    <Button
                        android:id="@+id/resume_cancel_btn"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_normal_filled"
                        android:contentDescription="@string/cancel_button_dialog"
                        android:text="@string/cancel"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/resume_confirmar_btn"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:contentDescription="@string/pse_button"
                        android:text="@string/pse_payment_button"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/resume_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:text="@string/resume_payment_text_info"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>