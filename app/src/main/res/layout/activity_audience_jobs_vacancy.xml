<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_app_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/CardAlgo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/CardViewBase">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <TextView
                android:id="@+id/textVieWTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audience_info"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/white_background"
                android:background="@color/blue_dark"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/textViewAudienceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audience_name_f"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textVieWTitulo"/>

            <TextView
                android:id="@+id/textViewS_P_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/S_P_Name"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAudienceName"/>

            <TextView
                android:id="@+id/textViewInitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/initial_date_f"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewS_P_Name"/>

            <TextView
                android:id="@+id/textViewFinalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/final_date_f"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewInitDate"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vacancy_list"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CardAlgo"/>

            <ListView
                android:id="@+id/vacancySelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textList">
            </ListView>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>